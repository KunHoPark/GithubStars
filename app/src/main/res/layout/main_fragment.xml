<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainViewModel"
            type="com.leo.githubstars.ui.main.MainViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutAccounts"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:tabIndicatorHeight="0dp"
            app:tabSelectedTextColor="@color/red">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabUpcomingShow"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                style="@style/C1_GR_01"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabCurrentShow"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                style="@style/C1_GR_01"/>

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerAccounts"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fadingEdgeLength="0dp"
            android:overScrollMode="never"
            android:paddingLeft="9dp"
            android:paddingRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabLayoutAccounts" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>